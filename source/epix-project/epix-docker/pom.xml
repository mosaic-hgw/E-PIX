                                            </includes>
                                            <targetPath>update_sqls</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy</directory>
                                            <includes>
                                                <include>ReleaseNotes.md</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy/demo</directory>
                                            <includes>
                                                <include>*</include>
                                            </includes>
                                            <targetPath>examples</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy/configs</directory>
                                            <includes>
                                                <include>matching-config-*.xml</include>
                                            </includes>
                                            <excludes>
                                                <exclude>*_*</exclude>
                                            </excludes>
                                            <targetPath>examples</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../</directory>
                                            <includes>
                                                <include>LICENSE.txt</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <executions>
                            <execution>
                                <id>compose-about.md</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.basedir}/../README.md</file>
                                    <outputFile>${basedir}/target/compose-wildfly/ABOUT.md</outputFile>
                                    <replacements/>
                                </configuration>
                            </execution>
                            <execution>
                                <id>compose-gras-web-xml</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.basedir}/../epix-web/src/main/webapp/WEB-INF/web.xml</file>
                                    <outputFile>${basedir}/target/compose-wildfly/jboss/${project.shortName}_gras_web.xml</outputFile>
                                    <replacements>
                                        <replacement>
                                            <token>\$\{login.enable.start}</token>
                                            <value>--&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{gras-login.enable.start}</token>
                                            <value>gras-auth --&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{gras-login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                            <execution>
                                <id>compose-keycloak-web-xml</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.basedir}/../epix-web/src/main/webapp/WEB-INF/web.xml</file>
                                    <outputFile>${basedir}/target/compose-wildfly/jboss/${project.shortName}_keycloak_web.xml</outputFile>
                                    <replacements>
                                        <replacement>
                                            <token>\$\{login.enable.start}</token>
                                            <value>--&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{keycloak-login.enable.start}</token>
                                            <value>keycloak-auth --&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{keycloak-login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                            <execution>
                                <id>compose-jboss-web-xml</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.basedir}/../epix-web/src/main/webapp/WEB-INF/jboss-web.xml</file>
                                    <outputFile>${basedir}/target/compose-wildfly/jboss/${project.shortName}_gras_jboss-web.xml</outputFile>
                                    <replacements>
                                        <replacement>
                                            <token>\$\{login.enable.start}</token>
                                            <value>--&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>compose-image</id>
            <properties>
                <excludeTests>CheckDigit, Integration</excludeTests>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>compose2-copy-sources</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${basedir}/target/compose-image/</outputDirectory>
                                    <overwrite>true</overwrite>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/src/compose-image</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${basedir}/src/commons</directory>
