<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>epix-docker</artifactId>
    <packaging>jar</packaging>
    <parent>
        <artifactId>epix-project</artifactId>
        <groupId>org.emau.icmvc.ttp.epix</groupId>
        <version>2.13.1</version>
    </parent>

    <properties>
        <maven.deploy.skip>true</maven.deploy.skip>
        <docker.baseImage>mosaicgreifswald/wildfly:24.0.1.Final-20220224</docker.baseImage>
        <docker.wildfly.deployments>/entrypoint-wildfly-deployments</docker.wildfly.deployments>
        <docker.wildfly.jboss>/entrypoint-wildfly-cli</docker.wildfly.jboss>
        <docker.wildfly.logs>/entrypoint-wildfly-logs</docker.wildfly.logs>
        <docker.wildfly.addins>/entrypoint-wildfly-addins</docker.wildfly.addins>
        <docker.wildfly.sqls>/entrypoint-wildfly-sqls</docker.wildfly.sqls>
        <docker.image.name>ths-greifswald.de/${project.shortName}:${project.version}</docker.image.name>
        <docker.build.host>tcp://192.168.56.101:2375</docker.build.host>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.emau.icmvc.ttp.epix</groupId>
            <artifactId>epix-ear</artifactId>
            <version>${project.version}</version>
            <type>ear</type>
        </dependency>
        <dependency>
            <groupId>org.emau.icmvc.ttp.epix</groupId>
            <artifactId>epix-web</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>docker</id>
            <properties>
                <excludeTests>CheckDigit, Integration</excludeTests>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>docker-copy-sources</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${basedir}/target/docker/</outputDirectory>
                                    <overwrite>true</overwrite>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/src/docker</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${basedir}/src/commons</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <excludes>
                                                <exclude>*.env</exclude>
                                                <exclude>addins/*</exclude>
                                                <exclude>sqls/*</exclude>
                                                <exclude>logs/*</exclude>
                                                <exclude>jboss/keycloak.json</exclude>
                                            </excludes>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../epix-ear/target/</directory>
                                            <includes>
                                                <include>*.ear</include>
                                            </includes>
                                            <targetPath>deployments</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../epix-web/target/</directory>
                                            <includes>
                                                <include>*.war</include>
                                            </includes>
                                            <targetPath>deployments</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy</directory>
                                            <includes>
                                                <include>configure_wildfly_*.cli</include>
                                            </includes>
                                            <targetPath>jboss</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy</directory>
                                            <includes>
                                                <include>ReleaseNotes.md</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../</directory>
                                            <includes>
                                                <include>LICENSE.txt</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <executions>
                            <execution>
                                <id>docker-gras-web-xml</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.basedir}/../epix-web/src/main/webapp/WEB-INF/web.xml</file>
                                    <outputFile>${basedir}/target/docker/jboss/${project.shortName}_gras_web.xml</outputFile>
                                    <replacements>
                                        <replacement>
                                            <token>\$\{login.enable.start}</token>
                                            <value>--&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{gras-login.enable.start}</token>
                                            <value>gras-auth --&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{gras-login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-keycloak-web-xml</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.basedir}/../epix-web/src/main/webapp/WEB-INF/web.xml</file>
                                    <outputFile>${basedir}/target/docker/jboss/${project.shortName}_keycloak_web.xml</outputFile>
                                    <replacements>
                                        <replacement>
                                            <token>\$\{login.enable.start}</token>
                                            <value>--&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{keycloak-login.enable.start}</token>
                                            <value>keycloak-auth --&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{keycloak-login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-jboss-web-xml</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.basedir}/../epix-web/src/main/webapp/WEB-INF/jboss-web.xml</file>
                                    <outputFile>${basedir}/target/docker/jboss/${project.shortName}_gras_jboss-web.xml</outputFile>
                                    <replacements>
                                        <replacement>
                                            <token>\$\{login.enable.start}</token>
                                            <value>--&gt;</value>
                                        </replacement>
                                        <replacement>
                                            <token>\$\{login.enable.end}</token>
                                            <value>&lt;!--</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.36.0</version>
                        <executions>
                            <execution>
                                <id>build-dockerfile</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <dockerHost>${docker.build.host}</dockerHost>
                            <skip>true</skip>
                            <images>
                                <image>
                                    <!--suppress UnresolvedMavenProperty -->
                                    <name>${docker.image.name}-${build.date}</name>
                                    <alias>${project.shortName}-eclipse</alias>
                                    <build>
                                        <contextDir>${basedir}/target/docker</contextDir>
                                        <dockerFile>Dockerfile</dockerFile>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>compose-wildfly</id>
            <properties>
