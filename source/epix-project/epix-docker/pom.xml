        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <id>default-install</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-jar</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <id>build.year</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create-timestamp</goal>
                        </goals>
                        <configuration>
                            <timestampFormat>yyyy</timestampFormat>
                            <timestampPropertyName>build.year</timestampPropertyName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>build.time</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create-timestamp</goal>
                        </goals>
                        <configuration>
                            <timestampFormat>MMM yyyy</timestampFormat>
                            <timestampPropertyName>build.monthYear</timestampPropertyName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>build.date</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create-timestamp</goal>
                        </goals>
                        <configuration>
                            <timestampFormat>yyyyMMdd</timestampFormat>
                            <timestampPropertyName>build.date</timestampPropertyName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.3</version>
                <executions>
                    <execution>
                        <id>compose-replace-all-placeholders</id>
                        <phase>package</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>${basedir}/target/**/*</include>
                                <include>${basedir}/target/*</include>
                            </includes>
                            <excludes>
                                <exclude>${basedir}/target/**/*.ear</exclude>
                                <exclude>${basedir}/target/**/*.war</exclude>
                                <exclude>${basedir}/target/**/*.png</exclude>
                                <exclude>${basedir}/target/**/*.sql</exclude>
                            </excludes>
                            <replacements>
                                <replacement>
                                    <token>(\$\{EPIX_VERSION}|%EPIX_VERSION%|\$\{project.version})</token>
                                    <value>${project.version}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{project.name}</token>
                                    <value>${project.parent.name}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{project.shortName}</token>
                                    <value>${project.shortName}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{project.upperName}</token>
                                    <value>${project.upperName}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{docker.baseImage}</token>
                                    <value>${docker.baseImage}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{docker.image.name}</token>
                                    <value>${docker.image.name}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{docker.wildfly.deployments}</token>
                                    <value>${docker.wildfly.deployments}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{docker.wildfly.jboss}</token>
                                    <value>${docker.wildfly.jboss}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{docker.wildfly.logs}</token>
                                    <value>${docker.wildfly.logs}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{docker.wildfly.addins}</token>
                                    <value>${docker.wildfly.addins}</value>
                                </replacement>
                                <replacement>
                                    <token>%WILDFLY_SQLS%</token>
                                    <value>${docker.wildfly.sqls}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{build.monthYear}</token>
                                    <!--suppress UnresolvedMavenProperty -->
                                    <value>${build.monthYear}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{build.year}</token>
                                    <!--suppress UnresolvedMavenProperty -->
                                    <value>${build.year}</value>
                                </replacement>
                                <replacement>
                                    <token>\$\{build.date}</token>
                                    <!--suppress UnresolvedMavenProperty -->
                                    <value>${build.date}</value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
