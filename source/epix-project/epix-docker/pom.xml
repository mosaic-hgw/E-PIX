                                            </includes>
                                            <targetPath>sqls</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy</directory>
                                            <includes>
                                                <include>update_database_*.sql</include>
                                            </includes>
                                            <targetPath>update_sqls</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy</directory>
                                            <includes>
                                                <include>ReleaseNotes.md</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy/demo</directory>
                                            <includes>
                                                <include>*</include>
                                            </includes>
                                            <targetPath>examples</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../deploy/configs</directory>
                                            <includes>
                                                <include>matching-config-*.xml</include>
                                            </includes>
                                            <excludes>
                                                <exclude>*_*</exclude>
                                            </excludes>
                                            <targetPath>examples</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/../</directory>
                                            <includes>
                                                <include>LICENSE.txt</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <executions>
                            <execution>
                                <id>compose2-about.md</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
